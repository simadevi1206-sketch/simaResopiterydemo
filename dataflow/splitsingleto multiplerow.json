{
	"name": "splitsingleto multiplerow",
	"properties": {
		"folder": {
			"name": "Real Time Scenario Data"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "InputSplitSingleRow",
						"type": "DatasetReference"
					},
					"name": "source"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "Sinksource",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn"
				},
				{
					"name": "flatten"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Name as string,",
				"          DepartmentID as string,",
				"          DateOfJoining as string,",
				"          employeeID as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source",
				"source derive(Name = split(Name,',')) ~> derivedColumn",
				"derivedColumn foldDown(unroll(Name),",
				"     mapColumn(",
				"          Name,",
				"          DepartmentID,",
				"          DateOfJoining,",
				"          employeeID",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> flatten",
				"flatten sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink"
			]
		}
	}
}